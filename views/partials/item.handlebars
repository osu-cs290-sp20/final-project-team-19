<article class="creature">
  <div class="creature-content">
    <h4 class="item-name">
      {{name}}
    </h4>
    <div>
      <span class="spell-info">Equipment Category: </span>
      <span class="spell-item">{{equipment_cat}}</span>
    </div>

    {{#if gear_cat}}
    <div>
      <span class="spell-info">Gear Catagory: </span>
      <span class="spell-item">
        {{gear_cat}}
      </span>
    </div>
    {{/if}}
    {{#if vehicle_cat}}
    <div>
      <span class="spell-info">Vehicle Catagory: </span>
      <span class="spell-item">
        {{vehicle_cat}}
      </span>
    </div>
    {{/if}}

    {{#if tool_cat}}
    <div>
      <span class="spell-info">Tool Catagory: </span>
      <span class="spell-item">
        {{tool_cat}}
      </span>
    </div>
    {{/if}}
    {{#if armor_cat}}
    <div>
      <span class="spell-info">Armor Catagory: </span>
      <span class="spell-item">
        {{armor_cat}}
      </span>
    </div>
    {{/if}}
    {{#if category_range}}
    <div>
      <span class="spell-info">Catagory Range: </span>
      <span class="spell-item">
        {{category_range}}
      </span>
    </div>
    {{/if}}


    {{#if armor_class_base}}
    <div>
      <p class="spell-info">Armor Class </p>
      <span class="spell-info">Base:</span>
      <span class="spell-item">{{armor_class_base}}</span>
      <p>
        <span class="spell-info">Dexterity Bonus: </span>
        <span class="spell-item">{{armor_class_dex}}</span>
      </p>
      <p>
        <span class="spell-info">Max Bonus: </span>
        <span class="spell-item">{{armor_class_max_bonus}}</span>
      </p>
    </div>
    {{/if}}

    {{#if str_min}}
    <div>
      <span class="spell-info">Minimum Strength Necessary: </span>
      <span class="spell-item">
        {{str_min}}
      </span>
    </div>
    {{/if}}
    {{#if stealth}}
    <div>
      <span class="spell-info">Stealth Disadvantage: </span>
      <span class="spell-item">
        {{stealth}}
      </span>
    </div>
    {{/if}}

    {{#if contents}}
    <div>
      <span class="spell-info">Contents: </span>
      <p class="spell-item">
        {{#each contents}}
        <p>
            {{item_url}}: {{quantity}}

          </p>
        {{/each}}
      </p>
    </div>
    {{/if}}



    <div>
      <span class="spell-info">Cost: </span>
      <span class="spell-item">{{quantity}}  {{unit}}</span>
    </div>
    {{#if weight}}
    <div>
      <span class="spell-info">Weight: </span>
      <span class="spell-item">{{weight}}</span>
    </div>
    {{/if}}
    {{#if damage_dice}}
    <div>

      <p class="spell-info">Damage: </p>
      <span class="spell-item">Damage Dice:</span>
      <span class="spell-item">{{damage_dice}}</span>
      <br>
      <span class="spell-item">Damage Bonus: </span>
      <span class="spell-item">{{damage_bonus}}</span>
      <br>
      <span class="spell-item">Damage Type: </span>
      <span class="spell-item">{{damage_type}}</span>
    </div>
    {{/if}}
    {{#if range_normal}}
    <div>
      <span class="spell-info"> Normal Range:</span>
      <span class="spell-item">
        {{range_normal}}
      </div>
      {{/if}}
      {{#if range_long}}
      <div>
      </span>
      <span class="spell-info"> Long Range:</span>
      <span class="spell-item">{{range_long}}</span>
    </div>
    {{/if}}

    {{#if properties}}
    <div>
      <span class="spell-info">Properties: </span>
      <span class="spell-item">
        {{#each properties}}
        {{name}},
        {{/each}}
      </span>
    </div>
    {{/if}}

    {{#if th_damage_dice}}
    <div>

      <p class="spell-info">Two handed Damage: </p>
      <span class="spell-item">Damage Dice:</span>
      <span class="spell-item">{{th_damage_dice}}</span>
      <!-- <p> -->
      <br>
      <span class="spell-item">Damage Bonus: </span>
      <span class="spell-item">{{th_damage_bonus}}</span>
    <!-- </p> -->
      </div>
    {{/if}}
    {{#if throw_range_normal}}
    <div>
      <span class="spell-info">Throw Range:</span>
      <span class="spell-item">
        {{throw_range_normal}}/{{throw_range_long}}
      </span>


    </div>
    {{/if}}

    {{#if speed_quantity}}
    <div>
      <span class="spell-info">Speed: </span>
      <span class="spell-item">
        {{speed_quantity}} {{speed_unit}}
      </span>
    </div>
    {{/if}}
    {{#if capacity}}
    <div>
      <span class="spell-info">Capacity: </span>
      <span class="spell-item">
        {{capacity}}
      </span>
    </div>
    {{/if}}


    {{#if desc}}
    <div>
      <span class="spell-info">Description: </span>
      <span class="spell-item">{{desc}}</span>
    </div>
    {{/if}}

  </div>
</article>
